{
  "name": "@simpleweb/open-format-react",
  "version": "0.3.0",
  "repository": "https://github.com/simpleweb/open-format/tree/main/sdks/react",
  "author": "Benjamin Reid <ben@simpleweb.co.uk>",
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/open-format-react.esm.js",
  "exports": {
    ".": {
      "import": "./dist/open-format-react.esm.js",
      "require": "./dist/index.js"
    }
  },
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "yarn node --experimental-vm-modules $(yarn bin jest) --runInBand",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "peerDependencies": {
    "ethers": "^5",
    "react": ">=16"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "size-limit": [
    {
      "path": "dist/react.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/react.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^7.0.8",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@types/react": "^18.0.12",
    "@types/react-dom": "^18.0.5",
    "ethers": "^5",
    "graphql-request": "^4.3.0",
    "husky": "^8.0.1",
    "jest-environment-jsdom": "^28.1.1",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "size-limit": "^7.0.8",
    "tsdx": "^0.14.1",
    "tslib": "^2.4.0",
    "typescript": "^4.7.3"
  },
  "dependencies": {
    "@simpleweb/open-format": "^0.3.0",
    "@web3-onboard/injected-wallets": "^2.0.12",
    "@web3-onboard/react": "^2.2.2",
    "@web3-onboard/walletconnect": "^2.0.5",
    "react-query": "^3.39.1"
  }
}
