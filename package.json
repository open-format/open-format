{
  "name": "open-format",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "packages/**",
    "sdks/**",
    "examples/!(node-deploy)/**"
  ],
  "repository": "git@github.com:simpleweb/open-format.git",
  "author": "Benjamin Reid <ben@simpleweb.co.uk>",
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=14.0.0"
  },
  "packageManager": "yarn@1.22.17",
  "scripts": {
    "prepare": "yarn workspace @simpleweb/open-format generate-contract-types",
    "start": "turbo run start --parallel --filter=!./examples/*",
    "test": "turbo run test --filter=!./examples/*",
    "build": "turbo run build --filter=!./examples/*",
    "document": "npm-run-all document:*",
    "document:open-format/nft": "jsdoc2md -c jsdoc2md.json -f sdks/open-format/src/core/nft.ts > docs/sdks/javascript/nft.md",
    "document:open-format/sdk": "jsdoc2md -c jsdoc2md.json -f sdks/open-format/src/core/sdk.ts > docs/sdks/javascript/sdk.md",
    "document:react/hooks": "jsdoc2md -c jsdoc2md.json -f sdks/react/src/hooks/*.tsx > docs/sdks/react/hooks.md"
  },
  "devDependencies": {
    "@babel/cli": "^7.18.9",
    "@babel/core": "^7.18.9",
    "@babel/preset-env": "^7.18.9",
    "@babel/preset-typescript": "^7.18.6",
    "@changesets/cli": "^2.23.0",
    "@godaddy/dmd": "^1.0.3",
    "jsdoc-babel": "^0.5.0",
    "jsdoc-to-markdown": "^7.1.1",
    "turbo": "^1.2.16"
  },
  "resolutions": {
    "**/react": "^18.1.0",
    "**/react-dom": "^18.1.0",
    "**/tsdx/jest": "^28.1.1",
    "**/tsdx/ts-jest": "^28.0.5",
    "**/typescript": "^4.7.2"
  }
}
